<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowBackground">@color/colorPrimary</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>

        <item name="txtColorDark">@android:color/black</item>
        <item name="txtColorLight">@android:color/white</item>
        <item name="cardColor">@android:color/white</item>
    </style>

    <style name="AppThemeDark" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_view_bg_dark</item>
        <item name="colorPrimaryDark">@color/color_view_bg_dark</item>
        <item name="colorAccent">@android:color/black</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowBackground">@color/color_view_bg_dark</item>
        <item name="android:statusBarColor">@color/color_view_bg_dark</item>

        <item name="txtColorDark">@android:color/white</item>
        <item name="txtColorLight">@android:color/black</item>
        <item name="cardColor">@color/color_card_bg_dark</item>
    </style>

    <style name="TextViewRegular" parent="android:Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?attr/txtColorDark</item>
    </style>

    <style name="EditTextRegular" parent="android:Widget.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?attr/txtColorDark</item>
    </style>
</resources>
